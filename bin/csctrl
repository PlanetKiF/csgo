#!/bin/bash

CSOWNER=%CSGO_USERNAME%
CSGODIR=/home/${CSOWNER}/csgosv
STEAMCMD=/usr/games/steamcmd
RCODE=0
LOGFILE=/home/${CSOWNER}/updatelog.txt



notifySlack() {

  SLACKTEXT="$1"
  UPDATELOG="$(tail -3 ${LOGFILE} | awk '{print}' ORS='\\n ')"

  curl -X POST -H 'Content-type: application/json' --data "{
      \"text\": \":bomb: ${SLACKTEXT}\",
      \"blocks\": [
          {
              \"type\": \"section\",
              \"text\": {
                  \"type\": \"mrkdwn\",
                  \"text\": \":bomb: ${SLACKTEXT}\"
              }
          },
          {
              \"type\": \"divider\"
          },
          {
              \"type\": \"context\",
              \"elements\": [
                  {
                      \"type\": \"plain_text\",
                      \"text\": \"tail -3 updatelog.txt\",
                      \"emoji\": true
                  }
              ]
          },
          {
              \"type\": \"section\",
              \"text\": {
                  \"type\": \"mrkdwn\",
                  \"text\": \"\`\`\`${UPDATELOG}\`\`\`\"
              }
          },
          {
              \"type\": \"divider\"
          }
      ]
   }" %SLACK_INFORMER_WEBHOOK%
}



start() {
    /home/${CSOWNER}/bin/csgenmapchange   # generate the mapchange.cfg with convenience aliases
    #/home/${CSOWNER}/bin/csgenmapgroups   # generate a mapgroup for all files. Probably not needed when subscribing to a workshop collection
    # Add -condebug -conclearlog do start params to enable logging to ~/csgosv/csgo/console.log
    # Moved to autexec.cfg  +game_type 0 +game_mode 0 +host_workshop_collection %STEAM_WORKSHOP_COLLECTION_ID% +workshop_start_map 125444404 +sv_pure 1
    ${CSGODIR}/srcds_run -game csgo -usercon -hltv -pidfile ${CSGODIR}/csgosv.pid
}

stop() {
    ${STEAMCMD} +login anonymous +force_install_dir ${CSGODIR}  +app_stop 740 +quit
    RCODE=$?
    killer -f
}

killer() {
   if [ "x$1" == "x-f" ];
     then killall -9 srcds_linux srcds_run
     else kill -9 $(cat ${CSGODIR}/csgosv.pid) # but will restart
  fi
}


update() {
   if [ "x$1" == "x-f" ];
     then ${STEAMCMD} +login anonymous +force_install_dir ${CSGODIR} +app_update 740 validate +quit
         RCODE=$?
     else ${STEAMCMD} +login anonymous +force_install_dir ${CSGODIR} +app_update 740 +quit
         RCODE=$?
    fi
    /home/${CSOWNER}/bin/cscheckbotfiles
}

upgrade() { # autoupdate & restarts script, needs to be run as root (sudo). Works for as long as there is no sudo passwd
   update -f
   if [ x${RCODE} == x0 ];
     then echo "`date`  CS updated, restarting instance..." >> /home/${CSOWNER}/updatelog.txt
         sudo shutdown -r now
     else echo "`date`  error during CS update, not restarted. Code: ${RCODE}" >> ${LOGFILE}
        notifySlack '*Error on CS Server during update. (Script `csctrl`)*'
   fi
}




case "$1" in
    start)
       start
       ;;
    stop)
       stop
       ;;
    kill)
       killer $2
       ;;
    restart)
       stop
       start
       ;;
    status)
       ${STEAMCMD} +login anonymous +force_install_dir ${CSGODIR} +app_status 740 +quit
       ;;
    update)
       update $2
       ;;
    upgrade)
       upgrade
       ;;
    *)
       echo "Usage: $0 {start|stop|restart|status|update|upgrade}"
esac

exit 0
